<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WhiteLotusIncorp25.Login"
             Title="Login">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="LoginBtn" TargetType="Button">
                <Setter Property="BackgroundColor" Value="RoyalBlue" />
                <Setter Property="TextColor" Value="Azure" />
                <Setter Property="CornerRadius" Value="10" />
                <Setter Property="Margin" Value="10" />
            </Style> 
        </ResourceDictionary>
    </ContentPage.Resources>
    <StackLayout>
        <Entry Placeholder="Username" Margin="10" />
        <Entry Placeholder="Password" IsPassword="True" Margin="10" />

        <Button Style="{StaticResource LoginBtn}" Text="Sign In" Margin="10" />
        <Button Text="Sign Up" Margin="10" />
        <Button Text="Forgot Password" Margin="10" />
    </StackLayout>
</ContentPage>